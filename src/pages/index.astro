   </main>
</Layout>

<style lang="less">
   html {
      scroll-padding-block-start: 96px;
   }
   about-texts {
      display: grid;
      gap: 3rem;
      grid-template-columns: repeat(auto-fit, minmax(30ch, 40ch) 1px minmax(30ch, 40ch));

      p {
         margin-block: 0;
      }

      hr {
         height: 100%;
         margin: 0;
      }
   }
   products {
      display: grid;
      gap: 1rem;
      margin-block-start: 1rem;

      @media screen and (min-width: 720px) {
         grid-template-rows: auto 1fr;
         grid-template-columns: repeat(
            auto-fit,
            minmax(30ch, 1fr) minmax(30ch, 1fr)
         );
      }
   }

   #about:not(:focus):not(:active) {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
   }
</style>
